<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/add_order_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="@color/md_theme_onPrimaryContainer"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/image_delete"
        app:layout_constraintStart_toEndOf="@id/image_product"
        app:layout_constraintTop_toTopOf="@id/image_product"
        tools:text="Papas de pollo BBQ x 2" />

    <TextView
        android:id="@+id/add_order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/image_product"
        app:layout_constraintTop_toBottomOf="@+id/add_order_product_name"
        tools:text="$6.000"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:contentDescription="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hotel_ic" />

    <ImageView
        android:id="@+id/image_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="no"
        app:layout_constraintBottom_toBottomOf="@+id/image_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_product"
        app:srcCompat="@drawable/ic_delete" />


    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/image_product" />


</androidx.constraintlayout.widget.ConstraintLayout>