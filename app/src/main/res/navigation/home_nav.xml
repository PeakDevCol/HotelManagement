<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/introduction_nav.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.peakdevcol.project.hotelmanagement.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addOrderFragment"
            app:destination="@id/addOrderFragment"
            app:enterAnim="@anim/right_enter_anim"
            app:exitAnim="@anim/right_exit_anim"
            app:popEnterAnim="@anim/right_pop_enter_anim"
            app:popExitAnim="@anim/right_pop_exit_anim" />
        <action
            android:id="@+id/action_homeFragment_to_inventoryFragment"
            app:destination="@id/inventoryFragment"
            app:enterAnim="@anim/right_enter_anim"
            app:exitAnim="@anim/right_exit_anim"
            app:popEnterAnim="@anim/right_pop_enter_anim"
            app:popExitAnim="@anim/right_pop_exit_anim" />
        <action
            android:id="@+id/action_homeFragment_to_currentOrdersFragment"
            app:destination="@id/currentOrdersFragment"
            app:enterAnim="@anim/right_enter_anim"
            app:exitAnim="@anim/right_exit_anim"
            app:popEnterAnim="@anim/right_pop_enter_anim"
            app:popExitAnim="@anim/right_pop_exit_anim" />
        <action
            android:id="@+id/action_homeFragment_to_balanceFragment"
            app:destination="@id/balanceFragment"
            app:enterAnim="@anim/right_enter_anim"
            app:exitAnim="@anim/right_exit_anim"
            app:popEnterAnim="@anim/right_pop_enter_anim"
            app:popExitAnim="@anim/right_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/addOrderFragment"
        android:name="com.peakdevcol.project.hotelmanagement.ui.addorder.AddOrderFragment"
        android:label="fragment_add_order"
        tools:layout="@layout/fragment_add_order" />
    <fragment
        android:id="@+id/currentOrdersFragment"
        android:name="com.peakdevcol.project.hotelmanagement.ui.currentorders.CurrentOrdersFragment"
        android:label="fragment_current_orders"
        tools:layout="@layout/fragment_current_orders" />
    <fragment
        android:id="@+id/inventoryFragment"
        android:name="com.peakdevcol.project.hotelmanagement.ui.inventory.InventoryFragment"
        android:label="fragment_inventory"
        tools:layout="@layout/fragment_inventory" />
    <fragment
        android:id="@+id/balanceFragment"
        android:name="com.peakdevcol.project.hotelmanagement.ui.balance.BalanceFragment"
        android:label="fragment_balance"
        tools:layout="@layout/fragment_balance" />

</navigation>